<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--TabLayout-->
    <style name="style_tab_layout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/design_tab_max_width</item>-->
        <!--<item name="tabPaddingStart">12dp</item>-->
        <!--<item name="tabPaddingEnd">12dp</item>-->
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">@dimen/space_2dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/style_tab_layout_14sp</item>
        <item name="tabSelectedTextColor">@color/theme_color</item>
        <!--<item name="tabGravity">fill/center</item>-->
        <!--<item name="tabMode">fixed</item>-->
    </style>

    <style name="style_tab_layout_14sp" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_size_14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="style_tab_layout_16sp" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
